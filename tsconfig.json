{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/ui/components/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@repository/*": ["src/repository/*"],
      "@pages/*": ["src/ui/pages/*"]
    }
  }
}
